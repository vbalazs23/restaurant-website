        <button class="tabs-button" data-for-tab="9">DESSZERTEK</button>
    </div>
    <div class="col-xs-10 col-md-6 tab-container">
        <div class="tab-content active" data-tab="1">
            <% for(let food of hamburger) { %> 
            <div class="food-container">
                <h4><%= food.name.toUpperCase() %> </h4><span><%= food.price %> Ft</span>
                <p><%= food.description %> </p>
            </div>
        <% } %>
        <div class="food-container extra">
            <h2>MENÜ</h2><span>+600 Ft</span>
        </div>
        <div class="col-md-6 hamburger-extra">
            <h1>EXTRÁK</h1>
            <p>+zöldség <span class="d-inline-block">150 FT</span><br>
            +hús <span class="d-inline-block">350 FT</span></p>
        </div>    
        </div>
        <div class="tab-content" data-tab="2">
            <% for(let food of talak) { %> 
