<section data-aos="fade-right" data-aos-duration="1200" data-aos-once="true" class="container-fluid menu">
<div class="row header">
    <div class="col-md-3 offset-md-1"><h1>ÉTLAP</h1></div>
</div>
<div class="row">
    <div class="col-xs-10 col-md-3 offset-md-1 tabs-sidebar">
        <button class="tabs-button active" data-for-tab="1">HAMBURGER</button>
        <button class="tabs-button" data-for-tab="2">TÁLAK</button>
        <button class="tabs-button" data-for-tab="3">SALÁTÁK</button>
        <button class="tabs-button" data-for-tab="4">SÜLTES TÁL</button>
